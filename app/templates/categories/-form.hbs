
<form {{action 'save' on='submit'}}>
  {{#if validationErrors}}
    <ul>
      {{#each error in validationErrors}}
        <li>{{error}}</li>
      {{/each}}
    </ul>
  {{/if}}

  <label for="title">Title</label>
  {{input value=model.title placeholder='ex: Sleep, Workout, Read'}}

  <label for="amount">Amount (hours)</label>
  {{input value=model.amount placeholder='ex: 1.5, 0.25, 2'}}

  <button type='submit'>Save</button>
</form>